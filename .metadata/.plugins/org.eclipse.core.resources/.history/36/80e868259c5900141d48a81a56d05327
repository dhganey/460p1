package creationalPatterns;

public interface Definitions
{
	/**
	 * Represents a set of constant strings
	 */
	public final static String 	GREAT_BRITAIN = "GB",
			UNITED_STATES = "USA",
			DINER = "Diner",
			EVENING = "Evening",
			ALL_DAY = "All day",
			HTML = "HTML",
			XML = "XML",
			TXT = "TXT",
			COUNTRY_OPTIONS = "(GB or USA)",
			RESTAURANT_OPTIONS = "(diner, evening, or all day)",
			FORMAT_OPTIONS = "(HTML, XML, or TXT)";
}

/**
 * Represents the valid country types
 * @author David
 *
 */
enum Country
{
	GB, USA;
}

public enum FoodCategory
{
	Breakfast, Snack, Appetizer, Lunch, Dinner, Dessert, Side;
}

enum RestaurantType
{
	DINER, EVENING_ONLY, ALL_DAY;
}
